<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.worldofwaffle.OrderHistoryDetailItemViewModel" />

        <import type="android.view.View" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/take_away_status"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:visibility="@{viewModel.hasTakeAway ? View.VISIBLE : View.GONE}"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/order_state_waffle_name"
            tools:visibility="visible"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/order_state_waffle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.waffleName}"
            tools:text="White Choco"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@+id/take_away_status"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/order_state_add_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.addOns}"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@+id/take_away_status"
            app:layout_constraintTop_toBottomOf="@+id/order_state_waffle_name"
            android:layout_marginTop="10dp"
            tools:text="Add on"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/order_state_waffle_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.waffleCount}"
            tools:text="2"
            android:textSize="24sp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/order_state_waffle_name"
            app:layout_constraintBottom_toBottomOf="@+id/order_state_add_on"

            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="36sp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toStartOf="@+id/order_state_waffle_count"
            app:layout_constraintTop_toTopOf="@+id/order_state_waffle_count"
            app:layout_constraintBottom_toBottomOf="@+id/order_state_waffle_count"
            />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>